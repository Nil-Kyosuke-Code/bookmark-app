generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ユーザー情報(ログインしたユーザーの情報を保存する)
model User {
  id            String @id @default(cuid())
  name          String?
  email         String @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  bookmark      Bookmark[]
  folders       Folder[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// 認証用のアカウント情報(GitHub, Googleなどのログイン情報を保存)
model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

// セッション情報(ログイン状態を管理する)
model Session {
  sessionToken String @unique
  userId       String
  expires      DateTime
  user         User @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// 認証トークン(メール認証などに使う "一時的"なトークン)
model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

// ブックマーク(ユーザーが保存したURLの情報)
model Bookmark {
  id          String @id @default(cuid())
  url         String
  title       String?
  description String?
  imageUrl    String?
  tags        String[]
  isFavorite  Boolean @default(false)
  userId      String
  user        User @relation(fields: [userId], references: [id], onDelete: Cascade)
  folders     Folder[] @relation("BookmarkFolders")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
}

// フォルダー
model Folder {
  id         String     @id @default(cuid())
  name       String
  isSecret   Boolean    @default(false)
  userId     String
  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  bookmarks  Bookmark[] @relation("BookmarkFolders")
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  @@index([userId])
}
